<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@null</item>
    </style>

    <style name="Animation.BaseTheme" parent="BaseTheme">
        <!--<item name="android:windowAnimationStyle">@style/Animation.Activity.Style</item>-->
    </style>

    <style name="AppTheme" parent="Animation.BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FirstTheme" parent="Animation.BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SplashAppTheme" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Transparent" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="main_tab_bottom_home">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/tab_text_indicator1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="main_tab_bottom1">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/tab_text_indicator</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_text_indicator</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="lineViewH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_f1f1f1</item>
    </style>

    <style name="lineViewV">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_f1f1f1</item>
    </style>

    <style name="topSpaceView">
        <item name="android:id">@id/view_top</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_theme</item>
    </style>
    <!--Activity进场。出场动画-->
    <style name="Animation.Activity.Style" parent="@android:style/Animation.Translucent">
        <!--用于设置打开新的Activity并进入新的Activity展示的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/start_translate_animation_enter</item>
        <!--用于设置打开新的Activity并销毁之前的Activity展示的动画-->
        <item name="android:activityOpenExitAnimation">@anim/start_translate_animation_exit</item>
        <!--用于设置关闭当前Activity进入上一个Activity展示的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/finish_translate_animation_enter
        </item>
        <!--用于设置关闭当前Activity时展示的动画-->
        <item name="android:activityCloseExitAnimation">@anim/finish_translate_animation_exit</item>
    </style>
</resources>
