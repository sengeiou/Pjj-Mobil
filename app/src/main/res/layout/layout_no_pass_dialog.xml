<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="@dimen/dp_223"
    android:background="@mipmap/ad_dialog_bg">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/no_pass" />

    <TextView
        android:id="@+id/tv_no_pass"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="审核未通过"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_pass"
        android:layout_marginTop="@dimen/dp_9"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="@dimen/dp_28"
        android:paddingEnd="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_go"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_39"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/shape_theme_bg_3"
            android:gravity="center"
            android:text="去认证"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_39"
            android:background="@drawable/shape_theme_bg_3"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>
