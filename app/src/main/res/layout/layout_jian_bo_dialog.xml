<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_283"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/dp_120"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_0">

    <TextView
        android:layout_width="@dimen/dp_283"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center_horizontal"
        android:text="监播列表"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_9"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:text="正在放映的屏幕："
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_13" />

    <View
        style="@style/lineViewH"
        android:layout_marginTop="@dimen/dp_77" />

    <com.pjj.view.custom.MaxHeightRecyclerView
        android:id="@+id/rv_xsp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_260"
        android:layout_marginTop="@dimen/dp_78"
        android:background="@color/white"/>
</RelativeLayout>
