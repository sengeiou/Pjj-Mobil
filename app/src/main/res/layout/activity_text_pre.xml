<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.TextPreActivity">

    <include layout="@layout/layout_head_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31" />

            <LinearLayout
                android:id="@+id/ll_text"
                android:layout_width="@dimen/dp_269"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/free_text_pre_bg"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_72"
                android:paddingBottom="@dimen/dp_0">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_33"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLength="32"
                    android:maxLines="2"
                    android:text="关于夏季外出员工高温补贴发放通知"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_260"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:ellipsize="end"
                    android:maxLength="294"
                    android:maxLines="14"
                    android:textColor="@color/color_555555"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_29" />

            <TextView
                android:id="@+id/tv_release"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:background="@color/color_theme"
                android:gravity="center"
                android:text="去发布"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>