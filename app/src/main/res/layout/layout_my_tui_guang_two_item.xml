<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_197"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical|right"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="推广中"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_left"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:id="@+id/fl"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_106"
            android:layout_below="@+id/line"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@mipmap/beijingkuang"
            android:orientation="vertical"
            android:padding="@dimen/dp_3">

            <ImageView
                android:id="@+id/ivFirst"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivSecond"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_toEndOf="@+id/fl"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_time_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/fl"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_length"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toEndOf="@+id/fl"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_create_date"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/fl"
            android:textColor="@color/color_ff4c4c"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_26"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_theme_side_3"
                android:gravity="center"
                android:text="预览"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_26"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_theme_side_3"
                android:gravity="center"
                android:text="取消推广"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_26"
                android:gravity="center"
                android:text="推广"
                android:background="@color/color_theme"
                android:textColor="@color/white"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
