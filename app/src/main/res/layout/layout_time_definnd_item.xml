<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_293"
    android:layout_height="@dimen/dp_196">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:gravity="center"
        android:text="自定义"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_et"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_d9d9d9_side_5"
        android:orientation="horizontal"
        android:padding="2dp">

        <EditText
            android:id="@+id/et"
            android:layout_width="@dimen/dp_180"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            android:background="@color/color_dbd9d9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="秒"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_et"
        android:layout_alignStart="@+id/ll_et"
        android:paddingStart="@dimen/dp_2"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_0"
        android:paddingBottom="@dimen/dp_10"
        android:text="请输入5的倍数，最高600秒"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tv_cancel"
        android:background="@color/color_dbd9d9" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_cancel"
        android:background="@color/color_dbd9d9" />
</RelativeLayout>
