<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_screen_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:paddingStart="@dimen/dp_18"
        android:paddingEnd="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_111111"
        android:textSize="@dimen/sp_14" />
    <View
        android:id="@+id/line"
        android:layout_below="@+id/tv_screen_name"
        android:background="@color/color_eeeeee"
        android:layout_marginStart="@dimen/dp_18"
        style="@style/lineViewH"/>
    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:drawablePadding="@dimen/dp_7"
        android:layout_marginStart="@dimen/dp_18"
        android:drawableStart="@mipmap/camera"
        android:text="摄像头"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666666"
        android:gravity="center_vertical"
        android:layout_below="@+id/line"/>
    <TextView
        android:id="@+id/tv_screenshots"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:drawablePadding="@dimen/dp_7"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@+id/tv_camera"
        android:drawableStart="@mipmap/screenshots"
        android:text="截屏"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666666"
        android:gravity="center_vertical"
        android:layout_below="@+id/line"/>
    <View
        android:layout_below="@+id/tv_screenshots"
        style="@style/lineViewH"
        android:layout_marginStart="@dimen/dp_18"
        android:background="@color/color_eeeeee"/>
</RelativeLayout>
