<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58">

    <ImageView
        android:id="@+id/iv_child_select"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_19"
        android:padding="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/unselect" />

    <TextView
        android:id="@+id/tv_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@+id/iv_child_select"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:text="屏幕"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_screen_type"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_21"
        android:layout_below="@id/tv_screen_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_child_select"
        android:background="@drawable/shape_theme_side_3"
        android:gravity="center"
        android:text="整屏投放"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_screen_price_type"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_21"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_screen_type"
        android:background="@drawable/shape_theme_side_3"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:text="公司自营"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_screen_price_type"
        android:background="@drawable/shape_theme_side_3"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:text="¥"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_price"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_statue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_f1f1f1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_3"
            android:textSize="@dimen/sp_12"
            android:paddingEnd="@dimen/dp_3"
            android:text="离线" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
