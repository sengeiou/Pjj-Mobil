<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="0dp"
        android:text="屏小加"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_name"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_toEndOf="@+id/tv_name"
        android:text="18993832111"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#FDD7D7"
        android:paddingStart="@dimen/dp_6"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_3"
        android:text="默认"
        android:textColor="@color/color_ea4a4a"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toEndOf="@+id/tv_default"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3"
        android:text="北京市北京市东城区三环"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_19"
        android:drawableTop="@mipmap/writeaddress"
        android:drawablePadding="@dimen/dp_4"
        android:text="编辑"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_47"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_write"
        android:background="@color/color_f1f1f1" />

    <View
        style="@style/lineViewH"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
