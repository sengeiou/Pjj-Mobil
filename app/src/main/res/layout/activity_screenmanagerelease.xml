<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ScreenManageReleaseActivity">

    <include layout="@layout/layout_head_title" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:text="投放日期"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/right"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:hint="请选择"
            android:paddingEnd="@dimen/dp_14"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/lineViewH" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:text="创建模板"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_update_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/right"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:minWidth="@dimen/dp_50"
            android:paddingEnd="@dimen/dp_14"
            android:text="上传素材"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View style="@style/lineViewH" />

    <LinearLayout
        android:id="@+id/ll_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_186"
            android:scaleType="center"
            android:src="@mipmap/left" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_186"
            android:scaleType="center"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View
        android:id="@+id/line_ll"
        style="@style/lineViewH"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="单次展示秒数:"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:id="@+id/ll_play_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_0"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_19" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_release"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/color_theme"
        android:gravity="center"
        android:text="发		布"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />
</LinearLayout>