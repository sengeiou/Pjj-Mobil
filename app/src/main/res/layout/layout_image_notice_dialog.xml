<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="@dimen/dp_223"
    android:orientation="vertical"
    android:background="@mipmap/ad_dialog_bg">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_marginTop="@dimen/dp_21"
        android:src="@mipmap/waite"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:text="您的认证资料正在审核中，
请耐心等待！"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingStart="@dimen/dp_51"
        android:paddingEnd="@dimen/dp_51"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_253"
        android:layout_height="@dimen/dp_39"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:text="取消"
        android:background="@drawable/shape_theme_bg_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_14"/>
</LinearLayout>
