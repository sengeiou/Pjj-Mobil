<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_149"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_screen"
            android:layout_width="@dimen/dp_89"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_13"
            android:background="@color/white"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_55"
            android:src="@drawable/video" />

        <TextView
            android:id="@+id/tv_building"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toEndOf="@+id/iv_screen"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="ad发放大师傅打发第三方快递费你开大数据库打开卡迪夫卡本菲卡十点半大姐夫办卡的部分安防部看"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_building"
            android:layout_toEndOf="@+id/iv_screen"
            android:text="发布日期：2019-6-23"
            android:textColor="@color/color_555555"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_release_date"
            android:layout_marginTop="@dimen/dp_6"
            android:includeFontPadding="false"
            android:layout_toEndOf="@+id/iv_screen"
            android:text="创建时间：2019-6-23"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:background="@drawable/shape_theme_side_3"
            android:gravity="center"
            android:text="预览"
            android:layout_marginEnd="@dimen/dp_17"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_toStartOf="@+id/tv_preview"
            android:background="@drawable/shape_999999_side_3"
            android:gravity="center"
            android:text="撤播"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
