<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_eeeeee"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="0dp"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg_3">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/unselect" />

        <TextView
            android:id="@+id/tv_elevator_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_47"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_toEndOf="@+id/iv_select"
            android:gravity="center_vertical"
            android:text="电梯"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_47"
            android:layout_toStartOf="@+id/iv_click"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_0"
            android:paddingEnd="@dimen/dp_6"
            android:text="已选屏幕：0/0"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_click"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_6"
            android:padding="@dimen/dp_14"
            android:src="@mipmap/up_fill" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_elevator_name"
            android:background="@color/color_e3e3e3" />

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_60"
            android:paddingEnd="0dp">

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
