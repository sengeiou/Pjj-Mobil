<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SelectNewMediaTimeActivity">

    <include layout="@layout/layout_head_title" />

    <TextView
        android:id="@+id/tv_date_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:drawableStart="@mipmap/date1"
        android:drawablePadding="@dimen/dp_14"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_19"
        android:text="发布日期"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/dp_38"
        android:gravity="center_vertical"
        android:textColor="@color/color_999999"
        app:layout_constraintLeft_toRightOf="@id/tv_date_name"
        app:layout_constraintRight_toLeftOf="@+id/iv_date_ori"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <ImageView
        android:id="@+id/iv_date_ori"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12"
        android:src="@mipmap/right" />

    <View
        android:id="@+id/line_date"
        style="@style/lineViewH"
        app:layout_constraintTop_toBottomOf="@id/tv_date_name" />

    <TextView
        android:id="@+id/tv_day_num_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:drawableStart="@mipmap/day_num"
        android:drawablePadding="@dimen/dp_14"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_19"
        android:text="发布天数"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_date" />

    <TextView
        android:id="@+id/tv_day_num"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/dp_38"
        android:gravity="center_vertical"
        android:textColor="@color/color_999999"
        app:layout_constraintLeft_toRightOf="@id/tv_day_num_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_date" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_f1f1f1"
        app:layout_constraintBottom_toTopOf="@+id/tv_sure"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_num_name" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/color_d2d2d2"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>