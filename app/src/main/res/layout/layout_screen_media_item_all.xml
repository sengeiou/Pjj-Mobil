<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_eeeeee"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="0dp"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg_3">

        <ImageView
            android:id="@+id/iv_select_media"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_1"
            android:padding="@dimen/dp_18"
            android:src="@mipmap/unselect" />

        <TextView
            android:id="@+id/tv_screen_name"
            android:layout_width="@dimen/dp_284"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_select_media"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_8"
            android:text="1号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_screen_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_screen_name"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_toEndOf="@+id/iv_select_media"
            android:background="@drawable/shape_theme_side_3"
            android:gravity="center"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_1"
            android:text="0.00元 / 天"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_screen_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_screen_price"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/tv_screen_price"
            android:background="@drawable/shape_fde6e6_bg_3"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="离线"
            android:textColor="@color/color_ea4a4a"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>

</FrameLayout>
