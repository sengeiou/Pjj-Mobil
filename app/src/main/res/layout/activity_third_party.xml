<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ThirdPartyActivity">
    <include layout="@layout/layout_head_title" />
    <LinearLayout
        android:id="@+id/ll_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/img_qq"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="QQ"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_444444"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:gravity="right|center_vertical"
            android:drawableRight="@mipmap/right"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"/>
    </LinearLayout>
    <View style="@style/lineViewH"/>
    <LinearLayout
        android:id="@+id/ll_sina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/img_weibo"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="QQ"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_444444"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:gravity="right|center_vertical"
            android:drawableRight="@mipmap/right"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"/>
    </LinearLayout>
    <View style="@style/lineViewH"/>
    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/img_weixin"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="QQ"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_444444"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:gravity="right|center_vertical"
            android:drawableRight="@mipmap/right"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"/>
    </LinearLayout>
    <View style="@style/lineViewH"/>
</LinearLayout>