<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.WelcomeActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_999999_bg_slide_5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:text="跳过"
        android:gravity="center"/>
    <Button
        android:id="@+id/bt_start"
        android:text="立即体验"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/shape_white_bg_slide_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_110"/>
    <RelativeLayout
        android:id="@+id/rl_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/circle_white_side"/>
        <View
            android:id="@+id/view_move"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/circle_white_bg"/>
        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@+id/view1"
            android:background="@drawable/circle_white_side"/>

        <View
            android:id="@+id/view3"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@+id/view2"
            android:background="@drawable/circle_white_side"/>

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_toEndOf="@+id/view3"
            android:background="@drawable/circle_white_side"/>
    </RelativeLayout>
</RelativeLayout>