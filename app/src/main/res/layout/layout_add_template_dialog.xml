<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_278"
    android:layout_height="@dimen/dp_224"
    android:background="@drawable/shape_white_bg_2">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@mipmap/p_sui_ji" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="@dimen/dp_278"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_create"
        android:layout_below="@+id/iv"
        android:gravity="center"
        android:text="添加模板后才能发布哦~"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/shape_theme_bg_3"
        android:gravity="center"
        android:text="去创建"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_147"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/shape_theme_bg_3"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
