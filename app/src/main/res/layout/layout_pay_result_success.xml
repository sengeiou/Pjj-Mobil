<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:text="支付结果"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_12"
        android:visibility="gone"
        android:src="@mipmap/close" />

    <View
        android:id="@+id/line_result"
        style="@style/lineViewH"
        android:layout_below="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_result"
        android:layout_marginTop="@dimen/dp_34"
        android:text="支付成功"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_23" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/tv_success"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="invisible"
        android:text="5秒后将自动跳转至订单"/>
    <ImageView
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:src="@mipmap/select"
        android:layout_below="@id/tv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_72"/>
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_38"
        android:text="查看订单"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_success"
        android:layout_marginTop="@dimen/dp_178"
        android:background="@color/color_theme"
        android:layout_marginBottom="@dimen/dp_29"/>
</RelativeLayout>
