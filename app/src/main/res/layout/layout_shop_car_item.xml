<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_all_select"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_marginStart="@dimen/dp_9"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/unselect" />

        <TextView
            android:id="@+id/tv_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_toEndOf="@+id/iv_all_select"
            android:drawableStart="@mipmap/goods"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="官方自营"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/line"
            style="@style/lineViewH"
            android:layout_below="@+id/tv_goods_type" />

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:orientation="vertical" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
