<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CreateTemplateExplainActivity">

    <include layout="@layout/layout_head_title" />

    <ImageView
        android:id="@+id/iv_screen"
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_136"
        android:layout_marginTop="@dimen/dp_145"
        android:src="@mipmap/create_write"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_38"
        android:text="选择创建模板类型"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_screen" />


    <com.pjj.view.custom.ImageButtonView
        android:id="@+id/iv_person"
        android:layout_width="@dimen/dp_149"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_145"
        android:background="@drawable/shape_theme_bg_5"
        android:paddingLeft="@dimen/dp_28"
        android:paddingRight="@dimen/dp_28"
        app:button_text="个人模板"
        app:button_text_size="@dimen/sp_16"
        app:button_text_color="@color/white"
        app:button_left_drawable="@mipmap/create_person"
        app:button_left_drawable_height="@dimen/dp_17"
        app:button_left_drawable_width="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_48"/>

    <com.pjj.view.custom.ImageButtonView
        android:id="@+id/iv_merchants"
        android:layout_width="@dimen/dp_149"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_145"
        android:layout_marginEnd="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_28"
        android:paddingRight="@dimen/dp_28"
        app:button_text="商家模板"
        app:button_text_size="@dimen/sp_16"
        app:button_text_color="@color/white"
        android:background="@drawable/shape_fe8024_bg_5"
        app:button_left_drawable="@mipmap/create_merchants"
        app:button_left_drawable_height="@dimen/dp_17"
        app:button_left_drawable_width="@dimen/dp_18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_48"/>
</android.support.constraint.ConstraintLayout>