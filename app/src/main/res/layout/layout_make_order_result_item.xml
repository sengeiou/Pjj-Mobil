<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_302"
    android:layout_height="@dimen/dp_336"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_10"
            android:text="下列广告屏暂时不能投放"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line"
            android:layout_below="@+id/tv_title"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10" />

        <View
            android:id="@+id/line"
            style="@style/lineViewH"
            android:layout_above="@+id/tv_reselect" />

        <TextView
            android:id="@+id/tv_reselect"
            android:layout_width="@dimen/dp_151"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="重新选择"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_next_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_reselect"
            android:background="@color/color_theme"
            android:gravity="center"
            android:text="继续下单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
