<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_274"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_kefu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_22"
        android:text="客服电话"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_below="@+id/tv_kefu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp_71"
        android:text="173 1058 8763"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_18" />

    <View
        android:id="@+id/line"
        style="@style/lineViewH"
        android:layout_below="@id/tv_phone" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/line1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/tv_cancel"
        android:background="@color/color_f1f1f1" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/line1"
        android:gravity="center"
        android:text="拨打"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
