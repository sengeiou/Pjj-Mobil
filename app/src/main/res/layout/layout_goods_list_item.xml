<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_136"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/dp_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:drawableStart="@mipmap/goods"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:text="官方自营" />

        <TextView
            android:id="@+id/tv_goods_statue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_14"
            android:text="待发货"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_goods_type"
            android:background="@color/color_f1f1f1" />

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="@dimen/dp_86"
            android:layout_height="@dimen/dp_86"
            android:layout_below="@+id/line_top"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_14"
            android:scaleType="fitXY"
            android:src="@mipmap/mall" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_top"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/tv_goods_num"
            android:layout_toEndOf="@+id/iv_goods"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="LED护眼台灯"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/iv_goods"
            android:text="100金币"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_integral"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toEndOf="@+id/iv_goods"
            android:text="运费：0元"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_goods_name"
            android:layout_alignParentEnd="true"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/dp_14"
            android:text="x1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_19"
            android:layout_alignBottom="@+id/iv_goods"
            android:layout_toEndOf="@+id/iv_goods"
            android:background="@drawable/shape_theme_side_10"
            android:gravity="center"
            android:text="不支持退换"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/dp_11" />
    </RelativeLayout>
</android.support.v7.widget.CardView>