<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:text="支付结果"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/close" />

    <View
        android:id="@+id/line_result"
        style="@style/lineViewH"
        android:layout_below="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_result"
        android:layout_marginTop="@dimen/dp_34"
        android:gravity="center"
        android:text="支付遇到问题"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_23" />

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_success"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:text="5秒后将自动跳转至订单"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@id/tv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_72"
        android:src="@mipmap/pay_wrong" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_143"
        android:drawableLeft="@mipmap/refresh"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="如已完成付款请点击此处刷新"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@+id/tv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_178"
        android:layout_marginBottom="@dimen/dp_29"
        android:background="@color/color_theme"
        android:gravity="center"
        android:text="重新付款"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
