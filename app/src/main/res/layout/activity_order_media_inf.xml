<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.OrderMediaInfActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_theme"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_order_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="bottom"
            android:paddingTop="@dimen/dp_24"
            android:text="待支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_statue"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_again_release"
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_29"
            android:layout_below="@+id/tv_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/shape_fff_bg_19"
            android:gravity="center"
            android:text="再次发布"
            android:textColor="@color/color_theme" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_make_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_id"
            android:layout_marginTop="@dimen/dp_7"
            android:text="下单时间："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_play_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_make_order_time"
            android:layout_marginTop="@dimen/dp_7"
            android:text="播放日期："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_play_long_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_play_date"
            android:layout_marginTop="@dimen/dp_7"
            android:text="播放总时长："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_play_long_time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_play_long_time"
            android:layout_marginTop="@dimen/dp_7"
            android:text="单次展示秒数："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_play_long_time_one"
            android:layout_marginTop="@dimen/dp_7"
            android:text="发布类型：广告传媒发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_look_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_type"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_666_side_12"
            android:padding="@dimen/dp_6"
            android:text="查看模板预览"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_sum_elevator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_type"
            android:layout_marginTop="@dimen/dp_7"
            android:text="电梯总数量："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_sum_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sum_elevator"
            android:layout_marginTop="@dimen/dp_7"
            android:text="屏幕总数量："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sum_screen"
            android:layout_marginTop="@dimen/dp_7"
            android:text="播放次数："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_play_count"
            android:layout_marginTop="@dimen/dp_7"
            android:text="订单总金额："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_copy_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_id"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_5"
            android:text="复制"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_look_price_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_sum_price"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_5"
            android:text="查看详情"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_media_order_inf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f1f1f1" />

    <include layout="@layout/layout_head_title" />
</RelativeLayout>