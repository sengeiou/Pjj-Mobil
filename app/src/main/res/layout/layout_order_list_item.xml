<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_release_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_29"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:text="发布"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_order_statue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_29"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="订单"
        android:textColor="#ffea4a4a"
        android:textSize="@dimen/sp_11" />

    <View
        android:id="@+id/line"
        style="@style/lineViewH"
        android:layout_below="@+id/tv_release_name" />

    <android.support.v7.widget.CardView
        android:id="@+id/iv_building"
        android:layout_width="@dimen/dp_91"
        android:layout_height="@dimen/dp_91"
        android:layout_below="@+id/line"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_building1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/building" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_19"
            android:background="@color/color_000000_70"
            android:gravity="center"
            android:text="电梯"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginStart="@dimen/dp_m_1"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@+id/iv_building"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_191"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="朗琴国际大厦"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_building_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_building"
        android:layout_toEndOf="@+id/tv_building"
        android:text="（等小区）"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_building"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_building"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="订单时间："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_11" />


    <TextView
        android:id="@+id/tv_start_date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_time"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@+id/iv_building"
        android:text="发布日期："
        android:textColor="@color/color_777777"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_start_date_name"
        android:layout_marginStart="@dimen/dp_0"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_start_date_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_777777"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_start_time_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_date_name"
        android:layout_alignLeft="@+id/tv_start_date_name"
        android:layout_marginTop="@dimen/dp_4"
        android:text="发布时间"
        android:textColor="@color/color_777777"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_start_time_name"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_start_time_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_777777"
        android:textSize="@dimen/sp_11" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_time_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/shape_d2d2d2_bg_slide_4"
            android:gravity="center"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="支付订单"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_right_order"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_d2d2d2_bg_slide_4"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_tuiguang"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_theme_side_3"
            android:gravity="center"
            android:text="推广"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
