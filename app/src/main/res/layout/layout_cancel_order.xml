<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_288"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_34"
        android:gravity="center_horizontal|bottom"
        android:text="申请取消订单"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentRight="true"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="0dp"
        android:src="@mipmap/close_gray" />
    <TextView
        android:id="@+id/tv_order_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单金额"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_19"/>
    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_155"/>
    <TextView
        android:id="@+id/tv_back_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可退款金额"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_below="@+id/tv_order_price_text"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"/>
    <TextView
        android:id="@+id/tv_back_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:layout_below="@+id/tv_order_price"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_155"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择取消原因"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_below="@+id/tv_back_price_text"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"/>
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_24"
        android:textSize="@dimen/sp_13"
        android:text="请选择"
        android:textColor="@color/color_999999"
        android:background="@drawable/shape_d2d2d2_bg_slide_3"
        android:layout_below="@+id/tv_back_price"
        android:layout_marginLeft="@dimen/dp_155"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_216"
        android:text="确认后该时段将不予保留，退款金额将于7个工作日内返回原账户。"
        android:textColor="@color/color_999999"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_38"
        android:text="确		认"
        android:layout_below="@+id/tv_explain"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_marginBottom="@dimen/dp_19"
        android:background="@drawable/shape_theme_bg_5"/>
</RelativeLayout>
