<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_193"
    android:background="@drawable/shape_white_bg_3">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="发布"
        android:textColor="@color/color_555555" />

    <TextView
        android:id="@+id/tv_release_statue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="发布"
        android:textColor="@color/color_555555" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tv_type"
        android:background="@color/color_f1f1f1" />

    <FrameLayout
        android:id="@+id/iv_pre_bg"
        android:layout_width="@dimen/dp_59"
        android:layout_height="@dimen/dp_93"
        android:layout_below="@+id/line"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_21"
        android:background="@mipmap/pre_bg">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_86"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/iv_video_tag"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@drawable/video"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_release_name"
        android:layout_width="@dimen/dp_196"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pre_bg"
        android:layout_alignTop="@+id/iv_pre_bg"
        android:layout_toEndOf="@+id/iv_pre_bg"
        android:ellipsize="end"
        android:maxLines="2"
        android:minHeight="@dimen/dp_33"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_release_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_pre_bg"
        android:text="发布时间："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_release_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_no"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_pre_bg"
        android:text="发布时间："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_11"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/shape_theme_side_3"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_theme_side_3"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_theme_bg_3"
            android:gravity="center"
            android:minWidth="@dimen/dp_48"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="推广"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

</RelativeLayout>
