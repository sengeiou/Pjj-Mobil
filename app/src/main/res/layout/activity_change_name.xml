<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ChangeNameActivity2">

    <include layout="@layout/layout_head_title" />

    <EditText
        android:id="@+id/et_write"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_38"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="请输入昵称"
        android:textSize="@dimen/sp_13"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/color_777777"
        android:textColorHint="@color/color_bdbdbd"
        android:background="@drawable/shape_d2d2d2_bg_slide_5"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_38"
        android:text="保    存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_theme_bg_5" />
</LinearLayout>