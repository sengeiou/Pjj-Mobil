<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_278"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp_76"
        android:text="400-125-1818"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/line"
        style="@style/lineViewH"
        android:layout_below="@id/tv_phone" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/line1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/tv_cancel"
        android:background="@color/color_f1f1f1" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/line1"
        android:gravity="center"
        android:text="呼叫"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
