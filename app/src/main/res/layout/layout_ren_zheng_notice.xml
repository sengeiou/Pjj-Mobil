<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_216"
        android:layout_height="@dimen/dp_144"
        android:layout_marginTop="@dimen/dp_70"
        android:scaleType="fitXY"
        android:src="@mipmap/renzheng" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_66"
        android:layout_marginEnd="@dimen/dp_15"
        android:lineSpacingMultiplier="1.5"
        android:text="1、根据相关法律法规，信息发布需要进行实名认证，实名认证不涉及金钱账户，认证信息屏加加平台会进行严格保密。\n2、未实名认证的用户不能发布信息。"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_shen_fen_ren_zheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_14"
        android:background="@drawable/shape_theme_bg_3"
        android:gravity="center"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:text="身份认证"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
