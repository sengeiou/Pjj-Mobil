<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_293"
    android:layout_height="@dimen/dp_173"
    android:background="@mipmap/seebar_bg">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_58"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_24"
        android:text="当前音量："
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_58"
        android:layout_toEndOf="@+id/tv"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_22"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:gravity="center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/dp_0"
            android:text="0"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="@dimen/dp_205"
            android:layout_height="@dimen/dp_28"
            android:max="10"
            android:maxHeight="@dimen/dp_7"
            android:progress="0"
            android:splitTrack="false"
            android:progressDrawable="@drawable/seek_bar_int"
            android:thumb="@mipmap/seekbar_thum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_0"
            android:paddingEnd="@dimen/dp_0"
            android:text="10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_48"
        android:layout_alignRight="@+id/tv_cancel"
        android:layout_alignParentBottom="true"
        android:background="@color/color_eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignTop="@+id/tv_cancel"
        android:background="@color/color_eeeeee" />
</RelativeLayout>
