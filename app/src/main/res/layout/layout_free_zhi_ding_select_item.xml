<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_342"
    android:layout_height="@dimen/dp_136"
    android:background="@mipmap/free_zhiding_bg">

    <CheckBox
        android:id="@+id/cb_zhiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_0"
        android:stateListAnimator="@null"
        android:text="置顶推广"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_31"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@mipmap/zhiding_tag1" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/iv_tag"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_11"
        android:background="@color/color_eeeeee" />

    <TextView
        android:id="@+id/tv_sum_price_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_12"
        android:text="总计金额："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_sum_price_name"
        android:layout_toEndOf="@+id/tv_sum_price_name"
        android:text="0.00 元"
        android:textColor="@color/color_ff4c4c"
        android:textSize="@dimen/sp_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_zhiding"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_19"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_7"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

</RelativeLayout>
