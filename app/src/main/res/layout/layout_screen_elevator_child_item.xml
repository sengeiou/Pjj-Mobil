<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_43"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_child_select"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/unselect" />

    <TextView
        android:id="@+id/tv_screen_name"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_6"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_screen_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_999999_side_3"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_1"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_1"
        android:text="0.00元 / 天"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_screen_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_fde6e6_bg_3"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:text="离线"
        android:textColor="@color/color_ea4a4a"
        android:textSize="@dimen/sp_11" />
</LinearLayout>
