<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_86"
        android:layout_below="@+id/line_top"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@mipmap/mall" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_top"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/tv_goods_num"
        android:layout_toEndOf="@+id/iv_goods"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="LED护眼台灯"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_return_type"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="¥0"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_goods_name"
        android:layout_alignParentEnd="true"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/dp_14"
        android:text="x1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_name"
        android:layout_alignStart="@+id/tv_goods_name"
        android:layout_alignEnd="@+id/tv_goods_name"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_goods_return_type"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_19"
        android:layout_below="@+id/tv_describe"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@+id/iv_goods"
        android:background="@color/color_e6f6fd"
        android:gravity="center"
        android:text="暂不支持退换"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/dp_11" />

</RelativeLayout>