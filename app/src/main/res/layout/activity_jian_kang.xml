<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.JianKangActivity">

    <include layout="@layout/layout_head_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:background="@color/color_f2f2f2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="0dp"
                android:text="友情提示：请联系当地合伙人再预约登记。"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13"
                app:layout_constraintTop_toBottomOf="@+id/titleView" />

            <TextView
                android:id="@+id/tv_name_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="预约人姓名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hint" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请输入预约人姓名"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_name_" />

            <View
                android:id="@+id/line_name"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_" />

            <TextView
                android:id="@+id/tv_sex_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_name" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请选择性别"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_sex_" />

            <View
                android:id="@+id/line_sex"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_sex_" />

            <TextView
                android:id="@+id/tv_age_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="年龄"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_sex" />

            <EditText
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="center_vertical|end"
                android:hint="请输入年龄"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_age_" />

            <View
                android:id="@+id/line_age"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_age_" />

            <TextView
                android:id="@+id/tv_phone_self_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="联系电话"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_age" />

            <EditText
                android:id="@+id/tv_phone_self"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:digits="0123456789-"
                android:gravity="center_vertical|end"
                android:hint="请输入联系电话"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_phone_self_" />

            <View
                android:id="@+id/line_phone_self"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_self_" />

            <TextView
                android:id="@+id/tv_address_front_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="省/市/区"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_phone_self" />

            <TextView
                android:id="@+id/tv_address_front"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请选择所在地区"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_address_front_" />

            <View
                android:id="@+id/line_address_front"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_front_" />

            <TextView
                android:id="@+id/tv_address_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="详细地址"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_address_front" />

            <EditText
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请输入详细地址"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_address_" />

            <View
                android:id="@+id/line_address"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_" />

            <TextView
                android:id="@+id/tv_doctor_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="预约医院"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_address" />

            <EditText
                android:id="@+id/tv_doctor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请输入预约医院"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_address" />

            <View
                android:id="@+id/line_doctor"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_doctor_" />

            <TextView
                android:id="@+id/tv_content_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="预约诊疗内容"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_doctor" />

            <EditText
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请输入诊疗内容（骨科）"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_content_" />

            <View
                android:id="@+id/line_content"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_content_" />

            <TextView
                android:id="@+id/tv_time_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="预约诊疗时间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="请选择诊疗时间"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_time_" />

            <View
                android:id="@+id/line_time"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_" />

            <TextView
                android:id="@+id/tv_phone_"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="推荐人电话"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_time" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:digits="0123456789-"
                android:gravity="center_vertical|end"
                android:hint="请输入推荐人电话"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_phone_" />

            <View
                android:id="@+id/line_phone"
                style="@style/lineViewH"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_" />

            <TextView
                android:id="@+id/tv_note_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="0dp"
                android:text="备注"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/line_phone" />

            <EditText
                android:id="@+id/et_note"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_144"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/shape_999999_side_3"
                android:gravity="start|top"
                android:hint="请输入备注信息"
                android:maxLength="60"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_note_name" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_29"
                android:background="@color/color_theme"
                android:gravity="center"
                android:text="提		交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                app:layout_constraintTop_toBottomOf="@id/et_note" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>