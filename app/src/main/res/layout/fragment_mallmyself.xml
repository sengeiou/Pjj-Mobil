<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MallMySelfFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_214"
            android:scaleType="fitXY"
            android:src="@mipmap/my_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_75"
            android:src="@mipmap/head_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/iv_head"
            app:layout_constraintLeft_toRightOf="@+id/iv_head"
            app:layout_constraintTop_toTopOf="@+id/iv_head" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="0dp">

        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mall_address" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="0dp"
            android:text="我的收货地址"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View style="@style/lineViewH" />

    <LinearLayout
        android:id="@+id/ll_integral"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="0dp">

        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/jifen" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="0dp"
            android:text="我的金币"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_14"
            android:drawableEnd="@mipmap/right"
            android:drawablePadding="@dimen/dp_5"
            android:text="0金币" />
    </LinearLayout>

    <View style="@style/lineViewH" />

    <LinearLayout
        android:id="@+id/ll_my_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="0dp">

        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/my_order" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="0dp"
            android:text="我的订单"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View style="@style/lineViewH" />

    <LinearLayout
        android:id="@+id/ll_mall_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="0dp">

        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mall_question" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="0dp"
            android:text="问题反馈"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View style="@style/lineViewH" />
</LinearLayout>