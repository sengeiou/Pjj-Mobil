<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center"
        android:text="确认订单"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginTop="@dimen/dp_4"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_order"
        style="@style/lineViewH"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_name" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:gravity="center"
        android:text="¥0.00"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_23"
        app:layout_constraintTop_toBottomOf="@+id/line_order" />

    <TextView
        android:id="@+id/tv_order_price_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_13"
        android:text="订单金额"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_price" />

    <TextView
        android:id="@+id/tv_order_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_14"
        android:textColor="@color/color_ea4a4a"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_order_price_name" />

    <View
        android:id="@+id/line_price_old"
        style="@style/lineViewH"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_price_name" />

    <TextView
        android:id="@+id/tv_order_zhe_kou_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingStart="@dimen/dp_13"
        android:text="优惠折扣"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@+id/line_price_old" />

    <TextView
        android:id="@+id/tv_order_zhe_kou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_14"
        android:text="0折"
        android:textColor="@color/color_ea4a4a"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_order_zhe_kou_name" />

    <View
        android:id="@+id/line_zhe_kou"
        style="@style/lineViewH"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_zhe_kou_name" />

    <TextView
        android:id="@+id/tv_pay_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp"
        android:text="支付方式"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@+id/line_zhe_kou" />

    <ImageView
        android:id="@+id/iv_weixin"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/weixin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_viewxin"
        app:layout_constraintTop_toTopOf="@+id/tv_viewxin" />

    <TextView
        android:id="@+id/tv_viewxin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="微信支付"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_11"
        app:layout_constraintLeft_toRightOf="@+id/iv_weixin"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_type_name"/>

    <ImageView
        android:id="@+id/iv_weixin_select"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_6"
        android:src="@mipmap/unselect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_viewxin"  />

    <View
        android:id="@+id/line_weixin"
        style="@style/lineViewH"
        app:layout_constraintTop_toBottomOf="@+id/tv_viewxin" />

    <ImageView
        android:id="@+id/iv_zhifubao"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/zhifubao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ali"
        app:layout_constraintTop_toTopOf="@+id/tv_ali" />

    <TextView
        android:id="@+id/tv_ali"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_7"
        android:gravity="center_vertical"
        android:text="支付宝支付"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_11"
        app:layout_constraintLeft_toRightOf="@+id/iv_zhifubao"
        app:layout_constraintTop_toBottomOf="@+id/line_weixin"/>

    <ImageView
        android:id="@+id/iv_zhifubao_select"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_6"
        android:src="@mipmap/unselect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ali"  />

    <View
        android:id="@+id/line_zhifubao"
        style="@style/lineViewH"
        app:layout_constraintTop_toBottomOf="@+id/tv_ali" />

    <ImageView
        android:id="@+id/iv_yinlian"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/yinlian"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_zhifubao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_4"
        android:gravity="center_vertical"
        android:text="银联借记卡支付"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_11"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/iv_yinlian"
        app:layout_constraintTop_toTopOf="@+id/iv_yinlian" />

    <ImageView
        android:id="@+id/iv_yinlian_select"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:src="@mipmap/unselect"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_zhifubao" />

    <View
        android:id="@+id/line_yinlian"
        style="@style/lineViewH"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/iv_yinlian" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/color_theme"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@id/line_yinlian" />
</android.support.constraint.ConstraintLayout>
