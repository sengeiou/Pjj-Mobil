<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_331"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_42"
        android:gravity="bottom|center_horizontal"
        android:text="信息发布规则"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_name"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_19"
        android:drawableStart="@drawable/shape_cecece_circle_bg"
        android:drawablePadding="@dimen/dp_4"
        android:textSize="@dimen/sp_12"
        android:text="支持图文 / 视频等内容"
        android:textColor="@color/color_666666" />

    <TextView
        android:id="@+id/tv_text2"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/shape_cecece_circle_bg"
        android:drawablePadding="@dimen/dp_4"
        android:text="可自由选择发布时间，支持多天 / 整周 / 整月"
        android:textColor="@color/color_666666" />

    <TextView
        android:id="@+id/tv_text3"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text2"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/shape_cecece_circle_bg"
        android:drawablePadding="@dimen/dp_4"
        android:text="可自由选择发布城市 / 小区 / 电梯 / 屏幕"
        android:textColor="@color/color_666666" />

    <TextView
        android:id="@+id/tv_text4"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text3"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:drawableStart="@drawable/shape_cecece_circle_bg"
        android:drawablePadding="@dimen/dp_4"
        android:text="通过审核后可免费更换发布内容3次"
        android:textColor="@color/color_666666" />

    <TextView
        android:id="@+id/tv_text5"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text4"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/shape_cecece_circle_bg"
        android:drawablePadding="@dimen/dp_4"
        android:text="可选择显示或隐藏落款姓氏 / 全名 / 电话"
        android:textColor="@color/color_666666" />

    <View
        android:id="@+id/line_text"
        style="@style/lineViewH"
        android:layout_below="@+id/tv_text5"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginEnd="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_29" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_text"
        android:layout_centerHorizontal="true"
        android:text="选择发布主体"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_title_name"
        android:layout_marginStart="@dimen/dp_242"
        android:text="个人/商家说明"
        android:visibility="invisible"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/sp_9" />

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_28"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_9"
            android:gravity="bottom|center_horizontal"
            android:text="个人信息发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_merchants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_9"
            android:gravity="bottom|center_horizontal"
            android:text="商家信息发布"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@+id/ll_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginBottom="@dimen/dp_31"
        android:background="@drawable/shape_theme_bg_3"
        android:gravity="center"
        android:text="取    消"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
