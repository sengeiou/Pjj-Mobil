<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ReleaseRuleActivity">

    <include layout="@layout/layout_head_title" />

    <ImageView
        android:id="@+id/iv_screen"
        android:layout_width="@dimen/dp_99"
        android:layout_height="@dimen/dp_165"
        android:layout_marginTop="@dimen/dp_19"
        android:src="@mipmap/chuantong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_3"
        android:text="自由选择图片或视频\n自由选择播放时长（5秒、10秒、15秒、30秒至300秒不等）\n自由选择发布日期（可多天）\n轮流播放的形式展示（全天循环）"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_text"
        style="@style/lineViewH"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:text="选择发布主体"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_text" />

    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_78"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@mipmap/ad_person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_" />

    <ImageView
        android:id="@+id/iv_merchants"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_78"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@mipmap/ad_merchants"
        app:layout_constraintLeft_toRightOf="@+id/iv_person"
        app:layout_constraintTop_toBottomOf="@+id/tv_" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="个人信息发布"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/iv_person"
        app:layout_constraintRight_toRightOf="@+id/iv_person"
        app:layout_constraintTop_toBottomOf="@+id/iv_person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="商家信息发布"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/iv_merchants"
        app:layout_constraintRight_toRightOf="@+id/iv_merchants"
        app:layout_constraintTop_toBottomOf="@+id/iv_merchants" />
</android.support.constraint.ConstraintLayout>