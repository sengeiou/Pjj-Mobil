<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ScreenManageSettingBmActivity">

    <include layout="@layout/layout_head_title" />

    <View
        android:id="@+id/line_notice_title"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_14"
        android:background="@drawable/shape_theme_bg_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_notice_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_notice_title" />

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_43"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="通知标题："
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/line_notice_title"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/shape_f4f4f4_bg_3"
        android:gravity="left|center_vertical"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_17"
        android:maxLength="8"
        android:hint="请输入标题(最多可输入8个字符)"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/line_notice_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice_title" />

    <View
        android:id="@+id/line_name"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_14"
        android:background="@drawable/shape_theme_bg_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:text="通知信息"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/line_name"
        app:layout_constraintTop_toBottomOf="@+id/et_title" />

    <EditText
        android:id="@+id/et_note"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_144"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        android:background="@drawable/shape_f4f4f4_bg_3"
        android:gravity="top|left"
        android:hint="请输入您要填写的通知信息"
        android:maxLength="60"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="0/60"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/et_note"
        app:layout_constraintRight_toRightOf="@+id/et_note" />


    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_16"
        android:drawableStart="@mipmap/unselect"
        android:drawablePadding="@dimen/dp_9"
        android:text="显示"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="@+id/et_note"
        app:layout_constraintTop_toBottomOf="@+id/et_note" />

    <TextView
        android:id="@+id/tv_hidden"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_27"
        android:drawableStart="@mipmap/select_point"
        android:drawablePadding="@dimen/dp_9"
        android:text="隐藏"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toLeftOf="@+id/tv_show"
        app:layout_constraintTop_toBottomOf="@+id/et_note" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_59"
        android:layout_marginEnd="@dimen/dp_6"
        android:background="@mipmap/sure_img"
        android:textSize="@dimen/sp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden" />
</android.support.constraint.ConstraintLayout>