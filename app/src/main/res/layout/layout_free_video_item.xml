<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_0"
    android:paddingBottom="@dimen/dp_32">

    <View
        android:id="@+id/line_title"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_theme_bg_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:text="标题："
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/line_title"
        app:layout_constraintLeft_toRightOf="@+id/line_title"
        app:layout_constraintTop_toTopOf="@+id/line_title" />

    <EditText
        android:id="@+id/et_video_title"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/shape_f4f4f4_bg_3"
        android:gravity="center_vertical"
        android:hint="起一个响当当的标题吧~"
        android:maxLength="32"
        android:maxLines="2"
        android:paddingStart="@dimen/dp_17"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/line_title"
        app:layout_constraintTop_toBottomOf="@+id/line_title" />

    <View
        android:id="@+id/line_url"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_theme_bg_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_video_title" />

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:text="视频链接："
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/line_url"
        app:layout_constraintLeft_toRightOf="@+id/line_url"
        app:layout_constraintTop_toTopOf="@+id/line_url" />

    <EditText
        android:id="@+id/et_video_url"
        android:layout_width="@dimen/dp_331"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/shape_f4f4f4_bg_3"
        android:gravity="top|left"
        android:hint="请您输入可播放的视频链接，如腾讯/爱奇艺"
        android:maxLines="10"
        android:minHeight="@dimen/dp_106"
        android:padding="@dimen/dp_17"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/line_url"
        app:layout_constraintTop_toBottomOf="@+id/line_url" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="提示：如链接不能播放或违规，我们将下架您的信息"
        android:textColor="@color/color_ff4c4c"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/et_video_url"
        app:layout_constraintTop_toBottomOf="@+id/et_video_url" />
</android.support.constraint.ConstraintLayout>
