<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_7"
        android:text="屏幕"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="@dimen/dp_66"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_building"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="离线"
        android:textColor="@color/color_ea4a4a" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_building"
        android:paddingStart="@dimen/dp_9"
        android:paddingTop="0dp"
        android:paddingEnd="@dimen/dp_19"
        android:paddingBottom="@dimen/dp_13"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <View
        style="@style/lineViewH"
        android:layout_below="@id/tv_date" />
</RelativeLayout>
