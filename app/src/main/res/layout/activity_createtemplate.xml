<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CreateTemplateActivity">
    <include layout="@layout/layout_head_title"/>
    <ImageView
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/image_style"
        android:layout_below="@+id/titleView"/>

    <TextView
        android:id="@+id/tv_template_name"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:layout_below="@+id/titleView"
        android:text="选择创建版式"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <com.pjj.view.custom.ImageStyleView
        android:id="@+id/iv_image_all"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_134"
        android:layout_below="@+id/tv_template_name"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_32"
        app:image_style="all" />

    <com.pjj.view.custom.ImageStyleView
        android:id="@+id/iv_image_half"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_134"
        android:layout_alignTop="@+id/iv_image_all"
        android:layout_marginLeft="@dimen/dp_216"
        app:image_style="half" />

    <com.pjj.view.custom.ImageStyleView
        android:id="@+id/iv_image_four"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_134"
        android:layout_below="@+id/iv_image_all"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_67"
        app:image_style="four" />

    <TextView
        android:layout_width="@dimen/dp_96"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image_all"
        android:layout_alignStart="@+id/iv_image_all"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="整幅模板"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="@dimen/dp_96"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image_half"
        android:layout_alignStart="@+id/iv_image_half"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="半幅模板"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="@dimen/dp_96"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image_four"
        android:layout_alignStart="@+id/iv_image_four"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="四分拼屏模板"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>